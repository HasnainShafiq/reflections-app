<% layout('./layouts/boilerplate') -%> 
<link rel="stylesheet" href="/css/style.css">

<div class="new__container">
    <div class="new__reflection__container">
        <form action="/reflections" method="POST">
            <select name="reflection[prompt]" id="prompt">
                <option value="how was your day?">How was your day?</option>
                <option value="what are you grateful for?">What are you grateful for?</option>
                <option value="What can you improve on?">What can you improve on?</option>
                <option value="What did you learn today?">What did you learn today?</option>
                <option value="General reflection">General reflection</option>
            </select>
            <textarea name="reflection[body]" id="body" cols="120" rows="20" style="max-width: 100%;"><%= reflection.body %></textarea>
            <button>save</button>
        </form>
        </div>
    </div>
    