<% layout('./layouts/boilerplate') -%>
    <link rel="stylesheet" href="/css/style.css">

    <div class="index__container">
        <div class="index__heading__container">
        <h1>All reflections</h1>
        <a href="/reflections/new"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg></a>
    </div>

        <ul>
            <% for(let reflection of reflections) { %>
                <li><a href="/reflections/<%=reflection._id%>">
                        <div class="post__container">
                            <h1><%= reflection.getTimeStamp() %></h1>
                            <h3 class="post__prompt">
                                <%=reflection.prompt %>
                            </h3>
                            <p class="post__body">
                                <%=reflection.body %>
                            </p>
                        </div>
                    </a></li>
                <% } %>
        </ul>
    </div>