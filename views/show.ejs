<% layout('./layouts/boilerplate') -%>

    <div class="show__container">
        <%- include('./partials/flash_success')  %> 
        <div class="show__links">
            <a href="/reflections"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
              </svg></a>
                <button id="delete__button"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg></button>
            <a href="/reflections/<%=reflection._id%>/edit"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6"
                fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg></a>
        </div>

        <!-- modal for when delete button is clicked -->
        
        <div class="delete__modal hidden">
            <p>Are you sure you want to delete this reflection?</p>
            <div class="button__container">
            <button id="close__delete">no</button>
            <form id="delete__form" action="/reflections/<%=reflection._id%>?_method=DELETE" method="POST">
                <button>yes</button>
            </div>
            </form>
        </div>



        <div class="show__reflection__container">
            <h3>
                <%=reflection.prompt%>
            </h3>
                <textarea id="show__textarea" name="reflection[body]" id="body" cols="120" rows="20" style="max-width: 100%;" contenteditable="false" readonly><%= reflection.body %></textarea>
        </div>
    </div>

    <script src="/js/flash.js"></script>
    <script src="/js/delete_modal.js"></script>